{{yield}}

{{#if newReviewForm}}

<div class="container">
  <form>
    <div class="form-group">
      <label for="user">Name</label>
      {{input value=user id="user" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date type="date" id="date" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="rating">Rating</label>
      {{#x-select value=rating action="rate"}}
        {{#x-option value=1}}1{{/x-option}}
        {{#x-option value=2}}2{{/x-option}}
        {{#x-option value=3}}3{{/x-option}}
        {{#x-option value=4}}4{{/x-option}}
        {{#x-option value=5}}5{{/x-option}}
      {{/x-select}}
    </div>

    <div class="form-group">
      <label for="image">Image</label>
      {{input value=image id="image" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="content">Report</label>
      {{textarea value=content id="content" rows="5" class="form-control"}}
    </div>

    <center>
    <button class="btn btn-warning"{{action 'saveReview' review}}>Submit</button>
    </center>
  </form>
</div>
  {{else}}
  <button class="btn btn-warning"{{action 'showNewReviewForm'}}>Review</button>
  {{/if}}
